generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  avatar     String
  name       String
  surname    String
  about      String    @default("")
  password   String
  salt       String
  articles   Article[]
  comments   Comment[]
  quizes     Quiz[]
}

model Article {
  id         Int       @id @default(autoincrement())
  authorId   Int
  title      String
  content    String    @db.LongText
  comments   Comment[]
  createdAt  DateTime  @default(now())
  author     User      @relation(fields: [authorId], references: [id])
}

model Comment {
  id         Int       @id @default(autoincrement())
  authorId   Int
  articleId  Int
  text       String    @db.LongText
  createdAt  DateTime  @default(now()) 
  author     User      @relation(fields: [authorId], references: [id])
  article    Article   @relation(fields: [articleId], references: [id])
}

model Quiz {
  id         Int       @id @default(autoincrement())
  authorId   Int
  name       String
  questions  Json   
  createdAt  DateTime  @default(now())
  author     User      @relation(fields: [authorId], references: [id])
}